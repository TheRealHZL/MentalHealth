# MindBridge AI Platform Configuration

# Application
ENVIRONMENT=development
DEBUG=true
HOST=0.0.0.0
PORT=8080

# Security
SECRET_KEY=your-super-secret-development-key-replace-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_HOURS=24
REFRESH_TOKEN_EXPIRE_DAYS=7

# Database
DATABASE_URL=postgresql://mindbridge_user:secure_password@localhost:5432/mindbridge_db
DATABASE_ECHO=false

# Redis Configuration (for rate limiting and caching)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# CORS and Security
ALLOWED_HOSTS=*
CORS_ORIGINS=*
HTTPS_ONLY=false

# AI Configuration
AI_ENGINE_ENABLED=true
# AI_ENGINE_URL=  # Not needed for internal AI engine
# AI_ENGINE_API_KEY=  # Not needed for internal AI engine

# AI Model Configuration
AI_DEVICE=cpu
AI_TEMPERATURE=0.7
AI_TOP_P=0.9
AI_TOP_K=50
AI_MAX_LENGTH=512
MAX_RESPONSE_LENGTH=300

# Model Paths
TOKENIZER_PATH=data/models/tokenizer.pkl
EMOTION_MODEL_PATH=data/models/emotion_classifier.pt
MOOD_MODEL_PATH=data/models/mood_predictor.pt
CHAT_MODEL_PATH=data/models/chat_generator.pt

# Model Architecture Parameters
VOCAB_SIZE=10000
EMBEDDING_DIM=128
HIDDEN_DIM=256
NUM_LAYERS=2
NUM_HEADS=8
FF_DIM=512
DROPOUT_RATE=0.1

# Email Configuration (optional for development)
SMTP_HOST=
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_USE_TLS=true
FROM_EMAIL=noreply@mindbridge.app

# File Storage
UPLOAD_DIR=data/uploads
MAX_UPLOAD_SIZE=10485760
ALLOWED_FILE_TYPES=pdf,jpg,jpeg,png

# Rate Limiting
RATE_LIMIT_ENABLED=true
DEFAULT_RATE_LIMIT=100
AUTH_RATE_LIMIT=5

# Monitoring and Logging
LOG_LEVEL=INFO
SENTRY_DSN=
ANALYTICS_ENABLED=true

# Feature Flags
THERAPIST_VERIFICATION_REQUIRED=true
EMAIL_VERIFICATION_REQUIRED=false
SHARING_ENABLED=true

# Business Logic
MAX_MOOD_ENTRIES_PER_DAY=10
MAX_DREAM_ENTRIES_PER_DAY=5
MAX_THERAPY_NOTES_PER_DAY=20
DEFAULT_SHARE_KEY_EXPIRY_DAYS=90

# External Services (optional)
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
