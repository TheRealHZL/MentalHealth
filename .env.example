# MindBridge AI Platform Configuration
# Copy this file to .env and replace with your actual values

# Application
ENVIRONMENT=development
DEBUG=true
HOST=0.0.0.0
PORT=8080

# Security - IMPORTANT: Generate a strong random key for production!
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-secret-key-here-replace-with-random-string
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_HOURS=24
REFRESH_TOKEN_EXPIRE_DAYS=7

# Database
# Format: postgresql://username:password@host:port/database
DATABASE_URL=postgresql://mindbridge_user:your_password@localhost:5432/mindbridge_db
DATABASE_ECHO=false

# Redis Configuration (for rate limiting and caching)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# CORS and Security
ALLOWED_HOSTS=*
CORS_ORIGINS=*
HTTPS_ONLY=false

# AI Configuration
AI_ENGINE_ENABLED=true
# AI_ENGINE_URL=  # Not needed for internal AI engine
# AI_ENGINE_API_KEY=  # Not needed for internal AI engine

# AI Model Configuration
AI_DEVICE=cpu  # Use 'cuda' for GPU acceleration
AI_TEMPERATURE=0.7
AI_TOP_P=0.9
AI_TOP_K=50
AI_MAX_LENGTH=512
MAX_RESPONSE_LENGTH=300

# Model Paths
TOKENIZER_PATH=data/models/tokenizer.pkl
EMOTION_MODEL_PATH=data/models/emotion_classifier.pt
MOOD_MODEL_PATH=data/models/mood_predictor.pt
CHAT_MODEL_PATH=data/models/chat_generator.pt

# Model Architecture Parameters
VOCAB_SIZE=10000
EMBEDDING_DIM=128
HIDDEN_DIM=256
NUM_LAYERS=2
NUM_HEADS=8
FF_DIM=512
DROPOUT_RATE=0.1

# Email Configuration (optional for development)
# To enable emails, also set EMAIL_ENABLED=true in config
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USERNAME=your_smtp_username
SMTP_PASSWORD=your_smtp_password
SMTP_USE_TLS=true
FROM_EMAIL=noreply@mindbridge.app

# File Storage
UPLOAD_DIR=data/uploads
MAX_UPLOAD_SIZE=10485760  # 10MB
ALLOWED_FILE_TYPES=pdf,jpg,jpeg,png

# Rate Limiting
RATE_LIMIT_ENABLED=true
DEFAULT_RATE_LIMIT=100
AUTH_RATE_LIMIT=5

# Monitoring and Logging
LOG_LEVEL=INFO
SENTRY_DSN=
ANALYTICS_ENABLED=true

# Feature Flags
THERAPIST_VERIFICATION_REQUIRED=true
EMAIL_VERIFICATION_REQUIRED=false
SHARING_ENABLED=true

# Business Logic
MAX_MOOD_ENTRIES_PER_DAY=10
MAX_DREAM_ENTRIES_PER_DAY=5
MAX_THERAPY_NOTES_PER_DAY=20
DEFAULT_SHARE_KEY_EXPIRY_DAYS=90

# External Services (optional - not needed for core functionality)
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
